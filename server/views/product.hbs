<section id='product_view'>
    <img src={{product.imageUrl}} />
    <div class='overview'>
        <div class='title'>
            <h1 class='name'>{{product.name}}</h1>
            <div class='price'>
                Price: <span>{{product.price}}</span>
            </div>
        </div>
        <div class='description'>{{product.description}}</div>
    </div>
</section>
<section id='product_reviews'>
    <h1>Customer Reviews</h1>
    <div id='review_list'>
        {{#each reviews}}
            <div class='review'>
                <div class='title'>{{this.title}}</div>
                <div class='body'>{{this.body}}</div>
            </div>
        {{/each}}
    </div>
    <h2>Leave a review</h2>
    <form action='/review/{{product.id}}' method='POST'>
        <div class='form_element'>
            <label for='review_title'>Title</label>
            <input type='text' id='review_title' name='title'>
        </div>
        <div class='form_element'>
            <label for='review_body'>What are your thoughts?</label>
            <textarea id='review_body' name='body'></textarea>
        </div>
        <div class='button form_element'>
            <button type='submit'>Submit your review</button>
        </div>
    </form>
</section>